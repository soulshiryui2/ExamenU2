<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- Imagen -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="22dp"
        android:src="@drawable/grupo1" />

    <!-- Botones con fondo rojo -->
    <Button
        android:id="@+id/btn_detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btn_globos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Globos"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_peluches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peluches"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_regalos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regalos"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btn_tazas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tazas"
        android:textSize="25dp"
        android:background="@drawable/rounded_button"
        android:layout_margin="16dp" />

</LinearLayout>



